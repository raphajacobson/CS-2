  <title>Enter the speculations of your package:</title>
  <script>
    //assocates class of package and distance and assigns a cost
    //Args:
    //    zip(str): replacement for either zip_start or zip_end (So i dont have to repeat code twice but rather just call the function with zip_start and zip_end later)
    //Returns:
    //    the zone of a zip code the user enters or "unmailable" if a zip code is invalid
    function getZip(zip)
    {
      if(zip >= 1 && zip <= 6999)
      {
        return 1;
      }
      else if (zip >= 7000 && zip <= 19999)
      {
        return 2;
      }
      else if (zip >= 20000 && zip <= 35999)
      {
        return 3;
      }
      else if (zip >= 36000 && zip <= 62999)
      {
        return 4;
      }
      else if (zip >= 63000 && zip <= 84999)
      { 
       return 5;
      }
      else if (zip >= 85000 && zip <= 99999)
      {
        return 6;
      }
      else (zip_end < 1 || zip_end > 99999)
      {
        return "unmailable"
      }
    }
    
    function determine_class(num1, num2, num3)
    //this function defines the class of the package based off of its length, height, and thickness
    //Args:
    //    length (int): length of package
    //    height (int): height of package
    //    thickness (int): thickenss of package
    //Returns:
    //    The package type of the package in a string or "unmailable" if there is an invalid length, height, or thickness
    {
      if (num1 >= 3.5 && num1 <= 4.25 && num2 >= 3.5 && num2 <= 6 && num3 >= .007 && num3 <= .016)
      {
        return "regular post card";
      }
      else if (num1 > 4.25 && num1 < 6 && num2 > 6 && num2 < 11.5 && num3 >= .007 && num3 <= .015)
      { 
        return "large post card";
      }
      else if (num1 >= 3.5 && num1 <= 6.125 && num2 >= 5 && num2 <= 11.5 && num3 > .016 && num3 < .25)
      {
        return "envelope";
      }
      else if (num1 > 6.125 && num1 < 24 && num2 >= 11 && num2 <= 18 && num3 >= .25 && num3 <= .5)
      {  
        return "large envelope";
      }
      else if (num1 + 2*(num2+num3) <= 84)
      {
        return "regular package";
      }
      else if ((130 >= (num1 + 2*(num2+num3))) && (num1 + 2*(num2+num3) > 84))
      {
        return "large package";
      }
      else 
      {
        return "Unmailable";
      }
      }

  function cost_association(package_type, difference)
  //this function associates the package's class and zip code with a price in order to determine the final cost
  //Args:
  //     package_type (string) = class of package defined in determine_class function
  //     difference (int) = The amount of zones the package will travel through defined in getZip
  //Returns:
  //    The price of the package or unmailable if the package_type is not defined
    {
      if (package_type == "regular post card")
      {
        return .20 + (.03 * parseInt(difference));
      }
      else if (package_type == "large post card")
      {
        return .37 + (.03 * parseInt(difference));
      }
      else if (package_type == "envelope")
      {
        return .37 + (.04 * parseInt(difference));
      }
      else if (package_type == "large envelope")
      {
        return .6 + (.05 * parseInt(difference));
      }
      else if (package_type == "regular package")
      {
        return 2.95 + (.25 * parseInt(difference));
      }
      else if (package_type == "large package")
      {
        return 3.95 + (.35 * parseInt(difference));
      }
      else 
      {
        return "Unmailable";
      }
    }
    function main() 
    {
    // Get values from the input fields and turns them into integers Convert the values to numbers (since inputs are strings by default)
      let num1 = parseFloat(document.getElementById("length").value);
      let num2 = parseFloat(document.getElementById("height").value);
      let num3 = parseFloat(document.getElementById("thickness").value);
      let num4 = (document.getElementById("zip_start").value);
      let num5 = (document.getElementById("zip_end").value);
      
    
    difference = Math.abs((parseFloat(getZip(num4))) - parseFloat((getZip(num5))));
    package_type = determine_class(num1,num2,num3);
    console.log(difference);
    //define total cost as the output of the cost_association function
    total_cost = ("Total cost: " + "$" + cost_association(package_type, difference));
    //remove any 0s at the beginning of the price
    total_cost = total_cost.replace(/0/g,'') 
    
    //if package measurements or zip codes are not valid, print unmailiable
    if (package_type == "Unmailable" || getZip(num4, num5) == "unmailable")
    {
        document.getElementById("result").innerText = "Unmailable";
    }
    //if all package measurements and zip code are valid, print the total cost
    else
    {
        document.getElementById("result").innerText = total_cost;
    }
    }

  </script>
</head>
